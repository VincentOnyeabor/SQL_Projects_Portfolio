#Table Creation

CREATE TABLE friends (
id INTEGER,
name TEXT,
birthday DATE
);


#Inserting Values

INSERT INTO friends
VALUES
(1, 'Ororo Munroe', '30/05/1940'),
(2, 'John Peters', '30/05/1941'),
(3, 'Pope Paul', '30/05/1942'),
(4, 'Cooper Anderson', '30/05/1943');


#Altering Table

UPDATE friends
SET name = 'Ororo Storm'
WHERE id = 1;


ALTER TABLE friends
ADD COLUMN email TEXT;

#Updating Table

UPDATE friends
SET email = 'storm@codecademy.com'
WHERE id = 1;

#Deleting from Table

DELETE FROM friends
WHERE id = 1;
